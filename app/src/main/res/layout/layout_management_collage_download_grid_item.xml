<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/water_mark_photo_download_iv"
            android:layout_width="165dp"
            android:layout_height="220dp" />

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/download_status_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="14dp"
            android:max="100"
            android:progress="0"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:progressDrawable="@drawable/download_progressbar" />


        <ImageView
            android:id="@+id/delete_iv"
            android:visibility="visible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/download_delete" />

    </RelativeLayout>

    <TextView
        android:id="@+id/water_mark_category_name_tv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="大白"
        android:textColor="@color/text_color_dark_626262"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/water_mark_category_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22枚"
            android:layout_margin="1dp"
            android:textColor="@color/text_color_dark_898989" />

        <TextView
            android:id="@+id/water_mark_category_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2200k"
            android:textColor="@color/text_color_dark_898989"
            android:layout_margin="1dp" />
    </LinearLayout>


</LinearLayout>