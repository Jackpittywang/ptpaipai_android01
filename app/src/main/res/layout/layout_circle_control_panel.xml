<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/photo_circle_control_panel_bg">

        <Button
            android:id="@+id/take_photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_shoot_btn" />

        <com.putao.camera.camera.view.RedPointBaseButton
            android:id="@+id/jigsaw_photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/take_photo_btn"
            android:background="@drawable/selector_circle_control_panel_jigsaw" />

        <com.putao.camera.camera.view.RedPointBaseButton
            android:id="@+id/water_mark_spring_photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/take_photo_btn"
            android:background="@drawable/selector_circle_control_panel_spring" />

        <com.putao.camera.camera.view.RedPointBaseButton
            android:id="@+id/voice_photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/take_photo_btn"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_circle_control_panel_voice" />
    </RelativeLayout>

</merge>