<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/album_list_bg"
    android:orientation="vertical">

    <!-- 标题栏 -->

    <RelativeLayout
        android:id="@+id/title_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:background="@drawable/selector_cancel_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/voice_photo_body_wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.putao.camera.thirdshare.view.ThirdShareItemView
                android:id="@+id/third_share_qzone_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                custom:item_background="@drawable/third_share_qzone_icon"
                custom:text="QQ空间" />

            <com.putao.camera.thirdshare.view.ThirdShareItemView
                android:id="@+id/third_share_weixin_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                custom:item_background="@drawable/third_share_weixin_icon"
                custom:text="微信好友" />

            <com.putao.camera.thirdshare.view.ThirdShareItemView
                android:id="@+id/third_share_pengyouquan_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                custom:item_background="@drawable/third_share_pengyouquan_icon"
                custom:text="朋友圈" />

            <com.putao.camera.thirdshare.view.ThirdShareItemView
                android:id="@+id/third_share_sina_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                custom:item_background="@drawable/third_share_sina_icon"
                custom:text="新浪微博" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>