<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/water_mark_download_grid_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="165dp">

        <com.putao.camera.editor.view.FilterEffectThumbnailView
            android:id="@+id/water_mark_photo_download_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/download_status_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:max="100"
            android:orientation="horizontal"
            android:progress="0"
            android:progressDrawable="@drawable/download_progressbar"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/water_mark_photo_ok_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/photo_ok_btn"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/water_mark_photo_new_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/photo_new_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/water_mark_category_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="大白"
        android:textColor="@color/text_color_dark_626262"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/water_mark_category_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="0枚"
            android:textColor="@color/text_color_dark_898989" />

        <TextView
            android:id="@+id/water_mark_category_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="0k"
            android:textColor="@color/text_color_dark_898989" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp">

        <Button
            android:id="@+id/water_mark_category_download_btn"
            style="@style/button.red"
            android:focusable="false"
            android:text="下载"
            android:textSize="18dp"></Button>
    </LinearLayout>

</LinearLayout>