<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.putao.camera.setting.SettingActivity">

    <include layout="@layout/layout_title_bar" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:paddingLeft="@dimen/dimens_10dp"
       >


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/sticker_management_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
           >
            <TextView
                android:id="@+id/sticker_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贴纸"
                android:textColor="@color/text_color_dark_626262"
                android:textSize="@dimen/dimens_20dp"></TextView>

            <TextView
                android:id="@+id/sticker_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_below="@+id/sticker_name_tv"
                android:gravity="center"
                android:text="4套(共3.2MB)"
                android:textColor="#ff5859"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/go_btn_bg" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_gary_line_bg"></ImageView>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/dynamic_pasting_management_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">



            <TextView

                android:id="@+id/dynamic_pasting_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态贴图"
                android:textColor="@color/text_color_dark_626262"
                android:textSize="@dimen/dimens_20dp"></TextView>

            <TextView
                android:id="@+id/dynamic_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_below="@+id/dynamic_pasting_name_tv"
                android:gravity="center"
                android:text="4套(共3.2MB)"
                android:textColor="#ff5859"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/go_btn_bg" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_gary_line_bg"></ImageView>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/template_management_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView

                android:id="@+id/template_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼图"
                android:textColor="@color/text_color_dark_626262"
                android:textSize="@dimen/dimens_20dp"></TextView>

            <TextView
                android:id="@+id/template_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_below="@+id/template_name_tv"
                android:gravity="center"
                android:text="4套(共3.2MB)"
                android:textColor="#ff5859"
                android:textSize="14dp" />




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/go_btn_bg" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_gary_line_bg"></ImageView>

    </LinearLayout>

</LinearLayout>