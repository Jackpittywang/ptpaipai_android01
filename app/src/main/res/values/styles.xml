    <style name="dialog_movie_caption_list" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 字体大小  begin -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Body">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Body.font">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Body.font.large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Body.font.normal">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Body.font.litle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Body.font.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Body.font.large.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body.font.normal.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body.font.litle.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body.font.small.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 字体大小  end -->


    <style name="button" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="button.red" parent="@style/button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/red_btn_bg</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="button.transparent" parent="@style/button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/text_color_dark_626262</item>
        <item name="android:textSize">18dp</item>

    </style>
</resources>